generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  locked
  unlocked
  completed
}

enum QuestionType {
  multi_select
  single_select
  free_text
}

enum StoryStatus {
  draft
  generating
  ready
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  stories  Story[]
}

model QuestionResponse {
  id           String       @id @default(uuid())
  storyId      String
  question     String
  answer       String?
  options      Json[]
  questionType QuestionType
  story        Story        @relation(fields: [storyId], references: [id], onDelete: Cascade)
}

model Story {
  id                String             @id @default(uuid())
  userId            String
  title             String
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionResponses QuestionResponse[]
  chapters          Chapter[]
}

model Chapter {
  id       String @id @default(uuid())
  title    String
  body     String
  position Int
  storyId  String
  story    Story  @relation(fields: [storyId], references: [id], onDelete: Cascade)
  tasks    Task[]
}

model Task {
  id          String     @id @default(uuid())
  chapterId   String
  title       String
  description String
  position    Int
  status      TaskStatus
  chapter     Chapter    @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}

model PromptTemplate {
  id     String @id @default(uuid())
  title  String
  prompt String
  schema Json?
}
