generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  locked
  unlocked
  completed
}

enum ChapterStatus {
  locked
  unlocked
  completed
}

enum QuestionType {
  multi_select
  single_select
  free_text
}

enum StoryStatus {
  draft
  generating
  ready
}

enum PromptPurpose {
  goal_context
  chapter_generation
  task_generation
  validation
}

enum PromptExecutionStage {
  story_context
  chapter_outline
  chapter_validation
  task_generation
  task_validation
}

enum PromptExecutionStatus {
  pending
  success
  failed
}

enum StoryEventType {
  status_change
  chapter_generated
  task_generated
  task_completed
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  stories  Story[]
}

model IntakeQuestion {
  id           String           @id @default(uuid())
  prompt       String
  options      String[]
  questionType QuestionType
  position     Int
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  answers      QuestionAnswer[]
}

model QuestionAnswer {
  id         String         @id @default(uuid())
  storyId    String
  questionId String
  answer     Json
  answeredAt DateTime       @default(now())
  story      Story          @relation(fields: [storyId], references: [id], onDelete: Cascade)
  question   IntakeQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([storyId, questionId])
}

model Story {
  id               String            @id @default(uuid())
  userId           String
  title            String
  status           StoryStatus       @default(draft)
  generatedAt      DateTime?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  questionAnswers  QuestionAnswer[]
  chapters         Chapter[]
  promptExecutions PromptExecution[]
  events           StoryEvent[]
}

model Chapter {
  id               String            @id @default(uuid())
  title            String
  summary          String
  context          Json?
  position         Int
  status           ChapterStatus     @default(locked)
  generatedAt      DateTime?
  metadata         Json?
  storyId          String
  story            Story             @relation(fields: [storyId], references: [id], onDelete: Cascade)
  tasks            Task[]
  promptExecutions PromptExecution[]
}

model Task {
  id               String            @id @default(uuid())
  chapterId        String
  title            String
  description      String
  position         Int
  status           TaskStatus        @default(locked)
  generatedAt      DateTime?
  completedAt      DateTime?
  metadata         Json?
  chapter          Chapter           @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  promptExecutions PromptExecution[]
}

model PromptTemplate {
  id               String            @id @default(uuid())
  title            String
  prompt           String
  schema           Json?
  purpose          PromptPurpose
  version          Int               @default(1)
  metadata         Json?
  promptExecutions PromptExecution[]
}

model PromptExecution {
  id         String                @id @default(uuid())
  storyId    String
  chapterId  String?
  taskId     String?
  templateId String?
  stage      PromptExecutionStage
  status     PromptExecutionStatus @default(pending)
  input      Json
  output     Json?
  model      String?
  metadata   Json?
  createdAt  DateTime              @default(now())
  story      Story                 @relation(fields: [storyId], references: [id], onDelete: Cascade)
  chapter    Chapter?              @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  task       Task?                 @relation(fields: [taskId], references: [id], onDelete: Cascade)
  template   PromptTemplate?       @relation(fields: [templateId], references: [id], onDelete: Cascade)
}

model StoryEvent {
  id        String         @id @default(uuid())
  storyId   String
  eventType StoryEventType
  payload   Json?
  createdAt DateTime       @default(now())
  story     Story          @relation(fields: [storyId], references: [id], onDelete: Cascade)
}
