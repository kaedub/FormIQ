{
  "name": "platform",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/platform/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "yarn tsc -b packages/platform/tsconfig.json"
      },
      "outputs": [
        "{projectRoot}/dist"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config packages/platform/vitest.config.ts"
      }
    }
  }
}
