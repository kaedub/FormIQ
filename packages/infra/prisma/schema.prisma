generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  locked
  unlocked
  completed
}

model StoryContext {
  id    String @id @default(uuid())
  story Story?
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  stories  Story[]
}

model Story {
  id        String @id @default(uuid())
  userId    String
  contextid String @unique

  user    User         @relation(fields: [userId], references: [id])
  context StoryContext @relation(fields: [contextid], references: [id])

  chapters StoryChapter[]
}

model StoryChapter {
  id       String      @id @default(uuid())
  title    String
  body     String
  position Int
  storyId  String
  story    Story       @relation(fields: [storyId], references: [id])
  tasks    StoryTask[]
}

model StoryTask {
  id        String     @id @default(uuid())
  chapterId String
  title     String
  objective String
  body      String
  status    TaskStatus

  storyChapter   StoryChapter? @relation(fields: [storyChapterId], references: [id])
  storyChapterId String?
}
