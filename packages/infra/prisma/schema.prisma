generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum StepStatus {
  locked
  unlocked
  completed
}

enum QuestionType {
  multi
  select
  text
}

enum StoryStatus {
  draft
  processing
  active
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  stories  Story[]
}

model Detail {
  id           String       @id @default(uuid())
  storyId      String       @unique
  question     String
  answer       String?
  options      Json[]
  questionType QuestionType
  story        Story        @relation(fields: [storyId], references: [id], onDelete: Cascade)
}

model Story {
  id       String    @id @default(uuid())
  userId   String
  title    String
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  details  Detail[]
  chapters Chapter[]
}

model Chapter {
  id       String @id @default(uuid())
  title    String
  body     String
  position Int
  storyId  String
  story    Story  @relation(fields: [storyId], references: [id], onDelete: Cascade)
  steps    Step[]
}

model Step {
  id        String     @id @default(uuid())
  chapterId String
  title     String
  objective String
  body      String
  position  Int
  status    StepStatus
  chapter   Chapter    @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}

model PromptTemplate {
  id     String @id @default(uuid())
  title  String
  text   String
  schema Json?
}
